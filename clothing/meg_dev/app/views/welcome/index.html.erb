<h1>Search results</h1>
<center><div class="products-container">
<% @product_tag.each do |prodtag| %>
	<% @products.each do |prod| %>
		<% @types.each do |type| %>
			<% if (prodtag.product_id == prod.product_id) && (type.product_id == prod.product_id) %>
				<%= link_to welcome_show_path(type), :action => 'go' do %>
					<div class = "product">
						<%= image_tag type.image, class:'show-image', :size => '150x150' if type.image.attached? %><br>
						<h2><%= prod.product_name %></h2>
						<p>Php <%= prod.product_price %></p>
					</div>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
</div></center>

<style type="text/css">
	h2 {
		text-transform: uppercase;
		color: teal;
		line-height: 10px;
		letter-spacing: 2px;
	}

	p {
		line-height: 0px;
		color: dimgrey;
	}
	
</style>
