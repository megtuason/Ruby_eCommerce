<%= form_with(model: tag, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<center>
    <table id="table" style="width: 40%;">
    <tr>
      <th>Tag name</th>
      <td><%= form.text_field :tag_name, maxlength:"20", class:'input-forms'  %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= form.submit class:'btn' %><%= link_to 'Back', tags_path, class:'btn' %></td>
    </tr>
  </table>
<% end %></center>

