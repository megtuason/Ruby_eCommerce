<title>Show Product</title>
<h1>Product ID: <%= @product.product_id %></h1>

<center>
	<table id="table" style="width: 30%;">
		<tr>
			<th>Name</th>
			<td><%= @product.product_name %></td>
		</tr>
		<tr>
			<th>Category</th>
			<td><%= @product.product_category%></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= @product.product_price%></td>
		</tr>
		<tr>
			<th>Total Quantity</th>
			<td><%= @product.total_quantity%></td>
		</tr>
		<tr>
			<th>Types</th>
			<td>
				<% if !@types.nil? %>
					<% @types.each do |type|%>
						<% if type.product_id == @product.product_id%>
						<p>(<%= type.type_color%>, <%= type.type_size%>)</p>
						<% end %>
					<% end %>
				<% else %> 
				none
				<% end %>
			</td>
		</tr>
		<tr>
			<th>Tags</th>
			<% if !@product_tags.nil? %>
				<% @product_tags.each do |tags|%>
					<% if tags.product_id == @product.product_id%>
						<% @tags.each do |t| %>
							<% if t.tag_id == tags.tag_id %>
								<td><p><%= t.tag_name %></p></td>
							<% end %>
						<% end %>
					<% end %>
				<% end %>
			<% else %> 
				none
			<% end %>
		</tr>
		<tr style="height: 60px">
			<th></th>
			<td><%= link_to 'Edit', edit_product_path(@product), class:'btn' %><%= link_to 'Back', products_path, class:'btn' %></td>
		</tr>
	</table>
</center>

<style type="text/css">
	th {
		width: 40%;
	}

  	a {
  		text-decoration: underline;
  		color: #465e5e;
  	}

  	a:hover {
  		color: #7aa4a4;
  	}
</style>