<title>Products</title>
<h1>Products</h1>

<center>
	<%= link_to 'Add New Product', new_product_path, class:'btn' %>
  <%= link_to 'Show Product Types', types_path, class:'btn' %>
  <%= link_to 'Show Product Tags', product_tags_path, class:'btn' %><br><br><br><br>
	<table id="table">
	<thead>
		<tr>
			<th>Product ID</th>
			<th>Product Name</th>
			<th>Product Category</th>
			<th>Product Price</th>
			<th>Total Quantity</th>
			<th colspan="5" style="width: 30%;"></th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.product_id %></td>
				<td><%= product.product_name %></td>
				<td><%= product.product_category %></td>
				<td><%= product.product_price %></td>
				<td><%= product.total_quantity %></td>
				<td><%= link_to 'Show', product_path(product) %></td>
				<td><%= link_to 'Edit', edit_product_path(product) %></td>
				<td><%= link_to 'Add Type', new_type_path(product)%></td>
				<td><%= link_to 'Add Tag', new_product_tag_path(product) %></td>
				<td><%= link_to 'Delete', product, method: :delete, data: {confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table><br><br>

  </center><br><br>


<style type="text/css">
  	a {
  		text-decoration: underline;
  		color: #465e5e;
  	}

  	a:hover {
  		color: #7aa4a4;
  	}

</style>